pipeline {

          agent {
		  
		      label {
			  
			      label "slave-1"
				  customWorkspace "/mnt/project/"
			  }
		  }
		  
		  stages {
		  
		     stage ("deploy game-of-") {
			 
			     steps {
				 sh "sudo docker stop gameoflife"
				 sh "sudo docker rm gameoflife"
				 sh "sudo rm -rf /root/.m2/repository"
				 sh "sudo mvn clean install"
				 sh "sudo docker run -itdp 80:8080 -v /mnt/project/gameoflife-web/target/gameoflife.war:/usr/local/tomcat/webapps --name gameoflife tomcat"
				 
			
				 }
			 
			 
			 }
		  
		  
		  }
		  
}
